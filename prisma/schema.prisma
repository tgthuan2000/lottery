datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model FileManagement_Folder {
  id             String                  @id @default(cuid())
  userId         String
  title          String
  parentFolderId String?
  parentFolder   FileManagement_Folder?  @relation("ParentChildrens", fields: [parentFolderId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  folders        FileManagement_Folder[] @relation("ParentChildrens")
  files          FileManagement_File[]

  deleted   Boolean  @default(false)
  deletedAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([id])
  @@index([userId])
  @@index([id, userId])
  @@index([parentFolderId])
}

model FileManagement_File {
  id       String                 @id @default(cuid())
  userId   String
  title    String
  folderId String?
  folder   FileManagement_Folder? @relation(fields: [folderId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  published   Boolean   @default(false)
  deleted     Boolean   @default(false)
  deletedAt   DateTime
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([id])
  @@index([userId])
  @@index([id, userId])
  @@index([folderId])
}

model NP_Slot {
  id        String   @id @default(cuid())
  label     String
  value     String
  createdAt DateTime @default(now())

  @@index([id])
}
